<div class="row">
  <div class="col-md">
    <h4 class="display-5">Burgers to Try</h4>
    <form class="form-inline">

      <div class="form-group">
        <input type="text" id="burgerName" maxlength="50" placeholder="Burger name">
      </div>

      <button id="addBurger" class="btn-sm btn-primary" type="submit">Add a Burger</button>
    </form>
    <ul>
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block devoured=false}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>

  <div class="col-md">
    <img id="burgerImage" src="/assets/images/burger.gif" alt="burger">
  </div>

  <div class="col-md">
    <h3 class="d-inline">Devoured Burgers!</h3>
    <button id="clear" class="btn-sm btn-secondary">Clear</button>
    <ul>
      {{#each burgers}}
        {{#if devoured}}
          {{> burgers/burger-block devoured=true}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>